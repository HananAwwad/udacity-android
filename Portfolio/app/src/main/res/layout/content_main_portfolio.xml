<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main_portfolio" tools:context=".MainPortfolioActivity"
    android:weightSum="1">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    >

    <TextView android:text="My Nanodegree Apps" android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:layout_gravity="center"
        android:layout_weight="0.09"
        android:gravity="center" />

    <Button
        style="@style/btnStyle"
        android:text="@string/btn_spStr"
        android:id="@+id/btnSpotify"
        android:onClick="showMessage"
        android:layout_weight="0.11"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"/>

    <Button
        style="@style/btnStyle"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:text="@string/btn_Scores"
        android:id="@+id/btnScores"
        android:onClick="showMessage"
        android:layout_weight="0.11" />

    <Button
        style="@style/btnStyle"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:text="@string/btn_Library"
        android:id="@+id/btnLibraryApp"
        android:onClick="showMessage"
        android:layout_weight="0.11"/>

    <Button
        style="@style/btnStyle"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:text="@string/btn_bldItBu"
        android:id="@+id/btnBuidItBig"
        android:onClick="showMessage"
        android:layout_weight="0.11"/>

    <Button
        style="@style/btnStyle"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:text="@string/btn_xyz"
        android:id="@+id/btnXYZReader"
        android:onClick="showMessage"
        android:layout_weight="0.11" />

    <Button
        style="@style/btnStyle"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:text="@string/btn_Capstone"
        android:id="@+id/btnCapstone"
        android:layout_below="@+id/btnCapstone"
        android:onClick="showMessage"
        android:background="@color/bkgLastBtn"/>
    </LinearLayout>
</ScrollView>

